{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "dotnet",
    "args": [],
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "dotNetRdf.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "docfx build",
            "type": "shell",
            "command": "docfx",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "docs"
            },
            "problemMatcher": "$msCompile",
        },
        {
            "label": "docfx serve",
            "type": "process",
            "isBackground": true,
            "command": "docfx",
            "args": [
                "--serve"
            ],
            "options": {
                "cwd": "docs"
            },
            "problemMatcher": "$msCompile",
        }
    ]
}